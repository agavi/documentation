<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0" xmlns="http://agavi.org/agavi/config/parts/databases/1.0">
	
	<ae:configuration environment="development">
		<databases default="blog"> 
			<!-- AgaviPdoDatabase is the adapter class for PHP PDO --> 
			<database name="blog" class="AgaviPdoDatabase">
				<ae:parameter name="dsn">mysql:host=localhost;dbname=bloggie_dev</ae:parameter>
				<ae:parameter name="username">bloggie</ae:parameter>
				<ae:parameter name="password">password</ae:parameter>
			</database> 
		</databases>
	</ae:configuration>
	
</ae:configurations>
